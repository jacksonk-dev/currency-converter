{
  "name": "currency-converter",
  "version": "1.0",
  "private": true,
  "scripts": {
    "lint": "eslint . --cache ",
    "eslint": "eslint .",
    "eslint:fix": "eslint . --fix ",
    "test:coverage": "react-scripts test --coverage --testMatch=**/test.{js,jsx}",
    "start": "react-scripts build; node server.js",
    "build": "react-scripts build;",
    "test": "react-scripts test --testMatch=**/test.{js,jsx}"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.3",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-stage-0": "^6.24.1",
    "babel-register": "^6.26.0",
    "enzyme-adapter-react-16": "^1.15.1",
    "eslint-config-airbnb": "^17.1.1",
    "eslint-plugin-import": "^2.18.0",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-react": "^7.16.0",
    "eslint-plugin-react-hooks": "^2.2.0",
    "ignore-styles": "^5.0.1",
    "prop-types": "^15.6.2"
  },
  "dependencies": {
    "axios": "^0.24.0",
    "enzyme": "^3.10.0",
    "express": "^4.17.2",
    "react": "^16.11.0",
    "react-dom": "^16.11.0",
    "react-icons": "^2.2.7",
    "react-router-dom": "^5.1.2",
    "react-scripts": "3.2.0"
  },
  "jest": {
    "coverageThreshold": {
      "global": {
        "branches": 100,
        "functions": 100,
        "lines": 100,
        "statements": 100
      }
    },
    "collectCoverageFrom": [
      "**/index.{js,jsx}",
      "!**/*stories.{js,jsx}",
      "!**/node_modules/**",
      "!**/stories/**",
      "!**/build/**",
      "!**/coverage/**"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
